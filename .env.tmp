# ============================================
# 数据库配置
# ============================================
DATABASE_URL="mysql://root:superman@127.0.0.1:3306/ecloud_db"

# ============================================
# JWT 认证配置
# ============================================
# JWT 密钥（生产环境请使用强随机字符串）
JWT_SECRET="ecloud-jwt-secret-key-change-in-production-2025"

# JWT Token 过期时间
JWT_EXPIRES_IN="2h"

# Refresh Token 密钥
REFRESH_TOKEN_SECRET="ecloud-refresh-token-secret-key-2025"

# Refresh Token 过期时间
REFRESH_TOKEN_EXPIRES_IN="7d"

# ============================================
# API 配置
# ============================================
# API 基础路径（用于前端请求，使用相对路径避免端口问题）
NEXT_PUBLIC_API_URL="/api"

# ============================================
# 其他配置
# ============================================
# Node 环境
NODE_ENV="development"
